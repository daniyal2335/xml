<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="aptech">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="faculty" minOccurs="1" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="faculty-name">
<xs:simpleType>
    <xs:restriction base="xs:string">
        <xs:pattern value="[a-z]{}{3,6}"></xs:pattern>
    </xs:restriction>
</xs:simpleType>
            </xs:element>
                            <xs:element name="facultyemail"> 
                                <xs:simpleType>
                  <xs:restriction base="xs:string">
                  <xs:minLength value="10"/>
                 <xs:maxLength value="15"/>
               <xs:pattern value="[a-z]{3,6}"></xs:pattern>
             </xs:restriction>
</xs:simpleType>
                                  </xs:element>
                            <xs:element name="facultycity" > 
                                <xs:simpleType>
    <xs:restriction base="xs:string">
        <xs:enumeration value="karachi"/>
        <xs:enumeration value="lahore"/>
    </xs:restriction>
</xs:simpleType>
                                  </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="facultyage" > 
                    <xs:simpleType>
<xs:restriction base="xs:string">
<xs:pattern value="[18>30]"></xs:pattern>
</xs:restriction>
</xs:simpleType>
                      </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
                <xs:element name="it">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="empname"/>
                            <xs:element name="salary"/>
                        </xs:sequence>               
                         </xs:complexType>
                </xs:element>
                <xs:element name="examination"></xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>